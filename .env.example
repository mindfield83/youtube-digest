# YouTube Digest - Environment Configuration
# ==========================================
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://youtube_digest:your_password@db:5432/youtube_digest

# Redis
REDIS_URL=redis://redis:6379/0

# YouTube OAuth
YOUTUBE_OAUTH_CREDENTIALS_PATH=/app/credentials/youtube_oauth.json
YOUTUBE_TOKEN_PATH=/app/credentials/youtube_token.json

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Supadata API (Transcript Fallback)
SUPADATA_API_KEY=your_supadata_api_key_here

# Email Configuration (Resend API)
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM_ADDRESS=YouTube Digest <digest@resend.dev>
EMAIL_TO_ADDRESS=niko.huebner@gmail.com

# Digest Settings
DIGEST_INTERVAL_DAYS=14
DIGEST_VIDEO_THRESHOLD=10

# Application
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=INFO

# Dashboard (optional basic auth)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your_secure_password
